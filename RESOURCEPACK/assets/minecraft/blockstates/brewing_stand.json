{
    "multipart": [
        {   "apply": { "model": "luigis_mansion:block/candle_stand" }},
        {   "when": { "has_bottle_0": "true" },
            "apply": { "model": "luigis_mansion:block/candle_stand_candle_0" }
        },
        {   "when": { "has_bottle_1": "true" },
            "apply": { "model": "luigis_mansion:block/candle_stand_candle_1" }
        },
        {   "when": { "has_bottle_2": "true" },
            "apply": { "model": "luigis_mansion:block/candle_stand_candle_2" }
        },
        {   "when": { "has_bottle_0": "false" },
            "apply": { "model": "luigis_mansion:block/candle_stand_empty_0" }
        },
        {   "when": { "has_bottle_1": "false" },
            "apply": { "model": "luigis_mansion:block/candle_stand_empty_1" }
        },
        {   "when": { "has_bottle_2": "false" },
            "apply": { "model": "luigis_mansion:block/candle_stand_empty_2" }
        }
    ]
}
